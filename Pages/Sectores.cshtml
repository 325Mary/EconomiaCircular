@page
@model SectoresModel
@{
    ViewData["Title"] = "Sectores Prioritarios";
}
@section Styles {
    <link rel="stylesheet" href="~/css/sectores.css" />
}
<section class="hero-sectores">
    <div class="container">
        <div class="breadcrumb">
            <span>Inicio</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
            <span>Sectores</span>
        </div>
        <h1 class="hero-title-sectores">Sectores Prioritarios</h1>
        <p class="hero-subtitle-sectores">Estrategias sectoriales de economía circular</p>
    </div>
</section>

<section class="section-sectores">
    <div class="container">
        <div class="tabs-list">
            <button class="tab-trigger active" data-tab="industria">
