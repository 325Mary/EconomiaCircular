                    <rect x="2" y="6" width="20" height="8" rx="1"></rect>
                    <path d="M17 14v7"></path>
                    <path d="M7 14v7"></path>
                    <path d="M17 3v3"></path>
                    <path d="M7 3v3"></path>
                    <path d="M10 14 2.3 6.3"></path>
                    <path d="m14 6 7.7 7.7"></path>
                    <path d="m8 6 8 8"></path>
                </svg>
                <span class="tab-label">Industria</span>
            </button>

            <button class="tab-trigger" data-tab="construccion">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="tab-icon">
                    <rect x="4" y="2" width="16" height="20" rx="2" ry="2"></rect>
                    <path d="M9 22v-4h6v4"></path>
                    <path d="M8 6h.01"></path>
                    <path d="M16 6h.01"></path>
                    <path d="M12 6h.01"></path>
                    <path d="M12 10h.01"></path>
                    <path d="M12 14h.01"></path>
