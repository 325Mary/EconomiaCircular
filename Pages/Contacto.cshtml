@page
@model ContactoModel
@{
    ViewData["Title"] = "Contacto";
}

<!-- Hero Section -->
<section class="hero-contacto">
    <div class="container">
        <div class="breadcrumb">
            <span>Inicio</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
            <span>Contacto</span>
        </div>
        <h1 class="hero-title-contacto">Contacto</h1>
        <p class="hero-subtitle-contacto">Estamos aquí para ayudarte</p>
    </div>
</section>

<!-- Contacto Section -->
<section class="section-contacto">
    <div class="container">
        <div class="contacto-grid">

            <!-- Columna Izquierda: Información de Contacto -->
            <div class="contacto-info-column">

                <!-- Dirección -->
                <div class="card info-card">
                    <div class="info-content">
                        <div class="info-icon bg-green">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                        </div>
                        <div class="info-text">
                            <h3 class="info-title">Dirección</h3>
                            <p class="info-description">
                                Carrera 53 N° 40A - 31<br />
                                Medellín, Antioquia<br />
                                Colombia
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Teléfono -->
                <div class="card info-card">
                    <div class="info-content">
                        <div class="info-icon bg-blue">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                            </svg>
                        </div>
                        <div class="info-text">
                            <h3 class="info-title">Teléfono</h3>
                            <p class="info-description">
                                +57 (4) 385 6000<br />
                                Línea Verde: 018000 123456
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Correo -->
                <div class="card info-card">
                    <div class="info-content">
                        <div class="info-icon bg-purple">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                        </div>
                        <div class="info-text">
                            <h3 class="info-title">Correo Electrónico</h3>
                            <p class="info-description">
                                economiacircular@metropol.gov.co<br />
                                contacto@amva.gov.co
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Horario -->
                <div class="card info-card">
                    <div class="info-content">
                        <div class="info-icon bg-orange">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                            </svg>
                        </div>
                        <div class="info-text">
                            <h3 class="info-title">Horario de Atención</h3>
                            <p class="info-description">
                                Lunes a Viernes<br />
                                8:00 AM - 5:00 PM<br />
                                (Horario de Colombia)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Descargas -->
                <div class="card download-card">
                    <h3 class="download-card-title">Descarga</h3>
                    <button class="btn btn-outline-dark btn-full btn-download">
                        📄 Portafolio Institucional
                    </button>
                    <button class="btn btn-outline-dark btn-full btn-download">
                        📊 Informe Anual 2024
                    </button>
                </div>

            </div>

            <!-- Columna Derecha: Formulario y Mapa -->
            <div class="contacto-form-column">

                <!-- Formulario -->
                <div class="card form-card">
                    <h2 class="form-title">Envíanos un Mensaje</h2>
                    <form class="contact-form" id="contactForm" method="post">

                        <!-- Nombre y Correo -->
                        <div class="form-row">
                            <div class="form-group">
                                <label for="nombre" class="form-label">Nombre Completo *</label>
                                <input type="text" id="nombre" name="nombre" class="form-input" placeholder="Juan Pérez" required />
                            </div>
                            <div class="form-group">
                                <label for="correo" class="form-label">Correo Electrónico *</label>
                                <input type="email" id="correo" name="correo" class="form-input" placeholder="juan@ejemplo.com" required />
                            </div>
                        </div>

                        <!-- Teléfono y Asunto -->
                        <div class="form-row">
                            <div class="form-group">
                                <label for="telefono" class="form-label">Teléfono</label>
                                <input type="tel" id="telefono" name="telefono" class="form-input" placeholder="+57 300 123 4567" />
                            </div>
                            <div class="form-group">
                                <label for="asunto" class="form-label">Asunto *</label>
                                <select id="asunto" name="asunto" class="form-input" required>
                                    <option value="">Selecciona un asunto</option>
                                    <option value="acompañamiento">Acompañamiento Empresarial</option>
                                    <option value="informacion">Solicitud de Información</option>
                                    <option value="alianzas">Alianzas y Convenios</option>
                                    <option value="normativa">Consulta Normativa</option>
                                    <option value="otro">Otro</option>
                                </select>
                            </div>
                        </div>

                        <!-- Mensaje -->
                        <div class="form-group">
                            <label for="mensaje" class="form-label">Mensaje *</label>
                            <textarea id="mensaje" name="mensaje" class="form-textarea" placeholder="Escribe tu mensaje aquí..." rows="6" required></textarea>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-checkbox-group">
                            <input type="checkbox" id="acepto" name="acepto" class="form-checkbox" required />
                            <label for="acepto" class="form-checkbox-label">
                                Acepto la Política de Tratamiento de Datos Personales y autorizo el uso de mi información
                                para fines relacionados con la economía circular *
                            </label>
                        </div>

                        <!-- CAPTCHA simulado -->
                        <div class="captcha-container">
                            <div class="captcha-box">
                                CAPTCHA
                            </div>
                            <p class="captcha-text">
                                Verifica que eres humano (simulación de CAPTCHA)
                            </p>
                        </div>

                        <!-- Botón Submit -->
                        <button type="submit" class="btn btn-primary btn-full btn-lg">
                            Enviar Mensaje
                        </button>
                    </form>
                </div>

                <!-- Mapa de Google -->
                <div class="card map-card">
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.1234567890!2d-75.5680!3d6.2476!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e4428dfb80fad05%3A0x42137cfcc7b53b56!2sCarrera%2053%20%2340a-31%2C%20Medell%C3%ADn%2C%20Antioquia%2C%20Colombia!5e0!3m2!1ses!2sco!4v1234567890"
                                width="100%"
                                height="100%"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"
                                title="Ubicación AMVA">
                        </iframe>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/contacto.js" asp-append-version="true"></script>
}
